    <style name="NusuStyleTing" parent="Theme.MaterialComponents.Light">
        <item name="android:textColorPrimary">@color/whiteTextColor</item>
        <item name="android:actionMenuTextColor">@color/whiteTextColor</item>
        <item name="colorAccent">?attr/colorAccent</item>

    </style>



    <style name="setting_theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorSwitchThumbNormal">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/whiteTextColor</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:colorForeground">@color/whiteTextColor</item>
    </style>

    <style name="nusuBtmShtStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="colorBackgroundFloating">@color/arcl_gray</item>
    </style>


