    <style name="AppTheme" parent="ThemeOverlay.MaterialComponents.Dark">
        <!-- Customize your theme here. -->
        <!--        <item name="android:fullDark">@color/black</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:activityOpenEnterAnimation">@anim/fab_slide_in_from_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/fab_scale_down</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--   <item name="cornerRadiusPrimary">8dp</item>
           <item name="cornerStylePrimary">cut</item>
           <item name="cornerRadiusSecondary">4dp</item>
           <item name="cornerStyleSecondary">cut</item>-->

        <item name="android:colorEdgeEffect" tools:ignore="NewApi">@color/colorAccent</item>
        <!--  <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>-->
        <item name="android:dialogLayout">@style/Base.Theme.MaterialComponents.Dialog</item>
        <item name="android:actionOverflowButtonStyle">@style/Share_me</item>

    </style>

    <style name="NavBar_theme" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:textColor">@color/textColorPrimary</item>


    </style>
    <style name="Theme.AppCompat.AppTheme.NoActionAndStatusBar" parent="NusuTheme">
        <item name="android:windowTranslucentStatus" tools:targetApi="KITKAT">true</item>
    </style>


    <style name="NusuTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--        <item name="android:fullDark">@color/black</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
<item name="android:tabWidgetStyle">@android:style/Widget.TabWidget</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="KITKAT">true</item>
        <item name="android:activityOpenEnterAnimation">@anim/fab_slide_in_from_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/fab_scale_down</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:editTextStyle">@color/black</item>

        <item name="android:checkedButton">@integer/google_play_services_version</item>


        <item name="android:colorEdgeEffect" tools:ignore="NewApi">@color/colorAccent</item>
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>

        <item name="android:dialogLayout">@style/Base.Theme.MaterialComponents.Dialog</item>
        <item name="android:actionOverflowButtonStyle">@style/Share_me</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimary</item>
        <item name="android:colorBackground">@color/background_material_dark</item>
        <item name="android:textColorSecondaryInverse">@color/textColorPrimary</item>
    </style>

    <style name="NusuTheme.NoActionbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

