<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_appbarimage"
    android:orientation="vertical">

    <!--    android:background="@drawable/appbar_image"-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="40dp"
        android:layout_height="100dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/rel_1"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">

            <android.support.design.chip.Chip
                android:id="@+id/real_bal"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:tag="balance_totals"
                android:text="@string/app_name"
                app:elevation="10dp"
                android:ellipsize="start"
                android:layout_marginTop="7dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Chip"
                app:chipIcon="@mipmap/nusu_logo"
                app:chipIconSize="20dp"
            />

            <org.fabiomsr.moneytextview.MoneyTextView
                android:id="@+id/nusu_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/real_bal"
                android:layout_marginBottom="1.9dp"
                android:layout_marginTop="5dp"
                android:ellipsize="start"
                android:layout_marginStart="4dp"
                android:visibility="gone"
                android:textStyle="bold"
                app:decimalSeparator="."
                app:baseTextColor="@color/textColorPrimary"
                app:symbolTextSize="9sp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/textColorPrimary"
                android:textSize="15sp"/>
        </RelativeLayout>


    </RelativeLayout>



</RelativeLayout>