<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:background="@color/whiteTextColor"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:id="@+id/scroll_v"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:elevation="4dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_logo"
                android:cropToPadding="true"
                android:paddingLeft="0dp"
                android:layout_margin="5dp"
                android:paddingRight="0dp"
                app:srcCompat="@drawable/ic_logo" />

            <TextView

                android:layout_width="wrap_content"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="19sp"
                android:fontFamily="sans-serif-condensed"
                android:layout_height="wrap_content"
                android:id="@+id/mcf"
                android:text="@string/app_name"
                android:contentDescription="@string/this_is_my_first_company_logo"
                android:layout_below="@+id/imageView3"
                android:layout_centerHorizontal="true" />
            <TextView

                android:layout_width="wrap_content"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:textColor="@color/colorAccent"
                android:textSize="19sp"
                android:fontFamily="sans-serif-condensed"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:text="v.1.5"
                android:contentDescription="@string/this_is_my_first_company_logo"
                android:layout_below="@+id/mcf"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </ScrollView>


    <!--the facebook icon here-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/social_layout"
        android:layout_centerInParent="true"
        android:layout_below="@id/scroll_v"
        android:layout_height="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/_2020_dixon_muneza"
            android:textColor="@color/arcl_gray"
            android:fontFamily="sans-serif-condensed"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"/>


        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/facebook_ic"
            android:id="@+id/fb_page"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            />



        <!--below is our layout anchor-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/fb_page"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-condensed"
            android:layout_centerHorizontal="true"
            android:text=""
            android:layout_height="wrap_content"
            android:id="@+id/textView5"/>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/twitter_ic"
            android:layout_height="wrap_content"
            android:id="@+id/twitter_page_"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            android:layout_toLeftOf="@+id/textView5"
            android:layout_toStartOf="@+id/textView5"/>

    </RelativeLayout>



</RelativeLayout>

