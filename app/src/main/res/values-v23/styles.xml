<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Material.NoActionBar">
        <!-- Customize your theme here. -->
        <!--        <item name="android:fullDark">@color/black</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:activityOpenEnterAnimation">@anim/fab_slide_in_from_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/fab_scale_down</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>
        <item name="android:actionOverflowButtonStyle">@style/Share_me</item>

    </style>

    <style name="nusuActionBarStyle">
        <item name="android:textColorSecondary">@color/whiteTextColor</item>
        <!-- <item name="android:layout_alignParentStart">true</item>
         <item name="android:layout_alignParentTop">true</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:author">@string/author</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:titleTextColor">@color/whiteTextColor</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_alignParentLeft">true</item>


    </style>

    <style name="NusuStyleTing" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/whiteTextColor</item>
        <item name="android:actionMenuTextColor">@color/whiteTextColor</item>
        <item name="colorAccent">?attr/colorAccent</item>

    </style>


</resources>