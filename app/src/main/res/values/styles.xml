    </style>


    <style name="NusuTheme" parent="ThemeOverlay.MaterialComponents.Dark">
        <!-- Customize your theme here. -->
        <!--        <item name="android:fullDark">@color/black</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>

        <item name="windowNoTitle">true</item>
        <item name="alertDialogTheme">@style/AppAlertDialog</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="KITKAT">true</item>
        <item name="android:activityOpenEnterAnimation">@anim/fab_slide_in_from_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/fab_scale_down</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
